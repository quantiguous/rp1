<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @report.name %>
</p>

<p>
  <strong>State:</strong>
  <%= @report.state %>
</p>

<p>
  <strong>Started at:</strong>
  <%= @report.started_at %>
</p>

<p>
  <strong>Finished at:</strong>
  <%= @report.finished_at %>
</p>

<p>
  <strong>Line count:</strong>
  <%= @report.line_count %>
</p>

<p>
  <strong>File name:</strong>
  <%= @report.file_name %>
</p>

<p>
  <strong>File path:</strong>
  <%= @report.file_path %>
</p>

<%= link_to 'Edit', edit_report_path(@report) %> |
<%= link_to 'Back', reports_path %>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>State</th>
      <th>Started at</th>
      <th>Finished at</th>
      <th>Line count</th>
      <th>File name</th>
      <th>File path</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.name %></td>
        <td><%= report.state %></td>
        <td><%= report.started_at %></td>
        <td><%= report.finished_at %></td>
        <td><%= report.line_count %></td>
        <td><%= report.file_name %></td>
        <td><%= report.file_path %></td>
        <td><%= link_to 'Show', report %></td>
        <td><%= link_to 'Edit', edit_report_path(report) %></td>
        <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

